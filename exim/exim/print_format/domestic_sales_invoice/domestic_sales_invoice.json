 "doctype": "Print Format",
 "font_size": 14,
 "html": "<!-- domestic -->\r\n\r\n<style>\r\n    body {\r\n        margin: 2px 2px 2px 3px;\r\n    }\r\n    .tbspace>tbody>tr>td {\r\n        padding: 0 2px 0 2px !important;\r\n        margin-top: 20px !important;\r\n        border-spacing: 0 !important;\r\n    }\r\n\r\n    table {\r\n        border-collapse: collapse;\r\n        border-spacing: 00 !important;\r\n\r\n    }\r\n\r\n    .ontop {\r\n        border-top: 1px solid !important;\r\n    }\r\n\r\n    .onright {\r\n        border-right: 1px solid !important;\r\n    }\r\n\r\n    .onleft {\r\n        border-left: 1px solid !important;\r\n    }\r\n\r\n    .onbottom {\r\n        border-bottom: 1px solid !important;\r\n    }\r\n\r\n    .onleftright {\r\n        border-right: 1px solid !important;\r\n        border-left: 1px solid !important;\r\n    }\r\n\r\n    .noright {\r\n        border-right: 0 !important;\r\n    }\r\n\r\n    .noleft {\r\n        border-left: 0 !important;\r\n    }\r\n\r\n    .noleftright {\r\n        border-right: 0 !important;\r\n        border-left: 0 !important;\r\n    }\r\n\r\n    .notop {\r\n        border-top: 0 !important;\r\n    }\r\n\r\n    .nobottom {\r\n        border-bottom: 0 !important;\r\n    }\r\n\r\n    .notopbottom {\r\n        border-top: 0 !important;\r\n        border-bottom: 0 !important;\r\n    }\r\n\r\n    td.v-align {\r\n        vertical-align: middle !important;\r\n    }\r\n\r\n    .bg {\r\n        background-color: #d2d2d2;\r\n    }\r\n\r\n    td.v-align-bt {\r\n        vertical-align: bottom !important;\r\n    }\r\n\r\n    .text-size,\r\n    div {\r\n        font-size: 9px !important;\r\n        \r\n    }\r\n\r\n    .sqare {\r\n        font-size: 15px;\r\n    }\r\n\r\n    .t-table {\r\n        border: 1px solid black;\r\n        /*height: 400px;*/\r\n        border-collapse: collapse;\r\n    }\r\n\r\n    .t-table th {\r\n        border: 1px solid black;\r\n       \r\n    }\r\n\r\n    .border-bottom {\r\n        border-bottom: 1px solid black;\r\n    }\r\n\r\n    .t-table td {\r\n        border-left: 1px solid black;\r\n        border-right: 1px solid black;\r\n    }\r\n\r\n    .border-table tr:last-child {\r\n        border-bottom: 1px solid black;\r\n    }\r\n\r\n    .description-font * {\r\n        font-size: 9px !important;\r\n    }\r\n\r\n    .headers {\r\n        font-size: 13px;\r\n    }\r\n\r\n    div {\r\n        margin: 1px 0px 1px;\r\n    }\r\n</style>\r\n<div id=\"header-html\" class=\"hidden-pdf\" style=\"margin-top:-15px !important;\">\r\n   {% if letter_head %}\r\n   <div class=\"letter-head\">{{ letter_head }}</div>\r\n   {%else%}\r\n   <div style=' margin-top: 20mm !important;'></div>\r\n   {% endif %}\r\n</div>\r\n{% set lst = ['ORIGINAL FOR RECIPIENT','DUPLICATE FOR TRANSPORTER','TRIPLICATE FOR SUPPLIER','EXTRA COPY'] %}\r\n{% for row in lst %}\r\n<table width=\"100%\">\r\n    <tr>\r\n        <td width=\"100px\" style=\"z-index:!important;\">\r\n            {% if doc.irn %}\r\n            {% set e_invoice_log = frappe.db.get_value(\"e-Invoice Log\", doc.irn, (\"invoice_data\", \"signed_qr_code\"),\r\n            as_dict=True) %}\r\n            {%- set invoice_data = _dict(json.loads(e_invoice_log.invoice_data)) -%}\r\n            \r\n            <div class=\"QR_code\">\r\n                {% set e_invoice_log = frappe.db.get_value(\"e-Invoice Log\", doc.irn, (\"invoice_data\", \"signed_qr_code\"), as_dict=True) %}\r\n                {%- set invoice_data = dict(json.loads(e_invoice_log.invoice_data)) -%}\r\n                <img src=\"data:image/png;base64,{{ get_qr_code(e_invoice_log.signed_qr_code, scale=2) }}\" class=\"qrcode\">\r\n            </div>\r\n            \r\n            <!--<div class=\"QR_code\">-->\r\n            <!--    <img src=\"{{ doc.qrcode_image or 'none' }}\" alt=\"qr-code\" />-->\r\n            <!--</div>-->\r\n            {% endif %}\r\n        </td>\r\n        <td>\r\n            <div>\r\n                {% if doc.irn %}\r\n                <p class=\"text-size\"><strong>IRN</strong>:{{ doc.irn }}</p>\r\n                {% if invoice_data.AckDt %}\r\n                <p class=\"text-size\"><strong>Ack Date</strong>:{{ frappe.utils.format_datetime(invoice_data.AckDt,\r\n                    \"dd/MM/yyyy hh:mm:ss\") }}\r\n                </p>\r\n                {% endif %}\r\n                {% if invoice_data.AckNo %}\r\n                <p class=\"text-size\"><strong>Ack No</strong>:{{invoice_data.AckNo }}</p>\r\n                {% endif %}\r\n                <p class=\"text-size\"><strong>Document No</strong>:{{ doc.name }}</p>\r\n                {% if doc.ewaybill %}\r\n                <p class=\"text-size\"><strong>E-Way Bill No</strong>:{{ doc.ewaybill }}&nbsp;&nbsp;\r\n                    {% if doc.eway_bill_validity %}\r\n                    <strong>E-Way Bill Validity</strong>: {{\r\n                    frappe.utils.formatdate(doc.get_formatted('eway_bill_validity'), \"dd-MM-yyyy\") }} {{\r\n                    frappe.utils.get_datetime(doc.get_formatted('eway_bill_validity')).strftime(\"%I:%M %p\") }}\r\n                    {% endif %}\r\n                </p>\r\n                {% endif %}\r\n                {% endif %}\r\n            </div>\r\n        </td>\r\n\r\n    </tr>\r\n</table>\r\n<table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"tbspace\">\r\n    <tbody>\r\n        <tr>\r\n            <td width=\"32%\" class=\"v-align ontop onleft onright\">\r\n                <p class=\"headers\">\r\n                    <strong>\r\n                        {{ doc.company }}\r\n                    </strong>\r\n                </p>\r\n            </td>\r\n            <td width=\"28%\" class=\"v-align ontop onleft onright\" colspan=\"2\">\r\n                <p align=\"center\" class=\"headers\"><strong>TAX INVOICE</strong></p>\r\n            </td>\r\n\r\n            <td width=\"30%\" class=\"v-align ontop onright\">\r\n                <p class=\"text-size\" align=\"left\">\r\n                    <span class=\"sqare\">&#x2611;</span>{{ row }}\r\n                </p>\r\n            </td>\r\n        </tr>\r\n        <tr>\r\n            <td width=\"42%\" rowspan=\"2\" class=\"onleftright\">\r\n                <p class=\"text-size\">\r\n                    {{ frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'address_line1') or \"\" }}\r\n                </p>\r\n                {%- if frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'address_line2') -%}\r\n                <p class=\"text-size\">\r\n                    {{ frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'address_line2') or \"\" }}\r\n                </p>\r\n                {%- endif -%}\r\n                <p class=\"text-size\">\r\n                    {{ frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'city') or \"\" }}-\r\n                    {{ frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'pincode') or \"\" }},\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    {{ frappe.db.get_value(\"Address\",{ 'name':doc.company_address},'state') or \"\" }}\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    GST No. : {{ doc.company_gstin|upper or '' }}\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    UDYAM REGISTRATION NUMBER:\r\n                    {{ frappe.db.get_value(\"Company\",doc.company,'msme_registration_number') or ''}}\r\n                </p>\r\n                    {% if doc.company_tax_id %}\r\n                                <p class=\"text-size\">\r\n                                    PAN NO : {{ doc.company_tax_id  }}\r\n                                </p>\r\n                                {% endif %}\r\n\r\n            </td>\r\n            <td width=\"25%\" class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    Date of Issue &amp; Time:\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    {{ doc.get_formatted(\"posting_date\") }}&nbsp;&nbsp;&nbsp;\r\n                    {{ doc.posting_time }}\r\n                </p>\r\n            </td>\r\n            <td class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    P.O. No.: <strong>{{ doc.po_no or '' }}</strong>\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    <strong>Dated :\r\n                        {%set list1=[]%}\r\n                        {% for row in doc.items %}\r\n                        {% if row.sales_order not in list1%}\r\n                        {{ frappe.utils.formatdate(frappe.db.get_value(\"Sales Order\",row.sales_order,'po_date'),\r\n                        \"dd-mm-YYYY\") }}\r\n                        {% set _ = list1.append(row.sales_order) %}\r\n                        {%endif%}\r\n\r\n                        {% endfor %}\r\n                    </strong>\r\n                </p>\r\n            </td>\r\n            <td class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    <span class=\"text-size\"> Invoice No.</span>\r\n                    <strong>{{ doc.invoice_no or doc.name }}</strong>\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    <span class=\"text-size\">Dated :</span>\r\n                    <strong>{{ doc.get_formatted(\"posting_date\") }}</strong>\r\n                </p>\r\n\r\n            </td>\r\n        </tr>\r\n        <tr>\r\n            <td width=\"25%\" class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    Transporter Name :\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    {{ doc.transporter_name or '' }}\r\n                </p>\r\n            </td>\r\n            <td width=\"20%\" class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    Vehicle No. : <strong>{{ doc.vehicle_no or '' }}</strong>\r\n                </p>\r\n               \r\n                <p class=\"text-size\">\r\n                    <strong>LR No. :</strong>\r\n                    {{ doc.lr_no or ''}}\r\n                </p>\r\n            </td>\r\n            <td width=\"21%\" class=\"ontop onright\">\r\n                <p class=\"text-size\">\r\n                    <strong>Container No. :</strong><br>\r\n                    {% for row in doc.container_detail %}\r\n                        {{ row.container_no or ''}}\r\n                    {% endfor %}\r\n                </p>\r\n            </td>\r\n        </tr>\r\n    </tbody>\r\n</table>\r\n</td>\r\n</tr>\r\n<tr>\r\n    <td>\r\n        <table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"tbspace\">\r\n            <tbody>\r\n                <tr>\r\n\r\n                    <td width=\"33%\" class=\"ontop onleftright\">\r\n                        <p class=\"text-size\">\r\n                            <u>Name &amp; Address of Buyer</u>\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            <strong>{{ doc.customer_name|upper }}</strong>\r\n                        </p>\r\n                        {% set address = frappe.db.get_value(\"Address\", doc.customer_address ,['address_line1',\r\n                        'address_line2', 'city', 'pincode', 'state' ,'gstin' ,'gst_state_number']) %}\r\n\r\n                        {%- if address -%}\r\n                        <p class=\"text-size\">\r\n                            {{ address[0]|upper if address[0] else \"\" }}\r\n                        </p>\r\n\r\n                        <p class=\"text-size\">\r\n                            {{ address[1]|upper if address[1] else \"\" }}\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            {{ address[2]|upper if address[2] else \"\" }}-\r\n                            {{ address[3]|upper if address[3] else \"\" }},\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            {{ address[4]|upper if address[4] else \"\" }}\r\n                        </p>\r\n                        {%- endif -%}\r\n\r\n                    </td>\r\n                    <td width=\"33%\" class=\"ontop onright\">\r\n                        <p class=\"text-size\">\r\n                            <u>Name &amp; Address of Consignee </u>\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            <strong>\r\n                                {{ frappe.db.get_value(\"Address\",doc.shipping_address_name,\"address_title\") or \"\" }}\r\n                            </strong>\r\n                        </p>\r\n                        {% set address2 = frappe.db.get_value(\"Address\", doc.shipping_address_name ,['address_line1',\r\n                        'address_line2', 'city', 'pincode', 'state' ,'gstin' ,'gst_state_number']) %}\r\n\r\n                        {%- if address2 -%}\r\n                        <p class=\"text-size\">\r\n                            {{ address2[0]|upper if address2[0] else \"\" }}\r\n                        </p>\r\n\r\n                        <p class=\"text-size\">\r\n                            {{ address2[1]|upper if address2[1] else \"\" }}\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            {{ address2[2]|upper if address2[2] else \"\" }}-\r\n                            {{ address2[3]|upper if address2[3] else \"\" }},\r\n                        </p>\r\n                        <p class=\"text-size\">\r\n                            {{ address2[4]|upper if address2[4] else \"\" }}\r\n                        </p>\r\n                        {%- endif -%}\r\n                    </td>\r\n                </tr>\r\n                <tr>\r\n                    <td class=\"onleftright v-align-bt\">\r\n                        {% if address[5] %}\r\n                        <p class=\"text-size\">\r\n                            GSTIN NO. {{ address[5]|upper if address[5] else \"\" }} &nbsp;&nbsp;&nbsp; STATE CODE\r\n                            {{ address[6]|upper if address[6] else \"\" }}\r\n                        </p>\r\n                        {% endif %}\r\n                    </td>\r\n                    <td class=\"onleftright v-align-bt\">\r\n                        {% if address2[5] %}\r\n                        <p class=\"text-size\">\r\n                            GSTIN NO. {{ address2[5]|upper if address2[5] else \"\" }} &nbsp;&nbsp;&nbsp; STATE\r\n                            CODE {{ address2[6]|upper if address2[6] else \"\" }}\r\n                        </p>\r\n                        {% endif %}\r\n                    </td>\r\n                </tr>\r\n            </tbody>\r\n        </table>\r\n    </td>\r\n</tr>\r\n<tr>\r\n    <td width=\"100%\">\r\n        {% set disc_list = [] %}\r\n         {% set pallets_sum = namespace(value=0) %}\r\n        {% for row in doc.items %}\r\n        {% if row.discount_percentage > 0 %}\r\n        {% set _ = disc_list.append(row.discount_percentage)%}\r\n        {% endif %}\r\n        {% endfor %}\r\n        {% set length = doc.items|length %} {% set ln = 10 * doc.items|length %} {% set def = 120 %}\r\n        <table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"t-table tbspace\">\r\n            <tbody>\r\n                <tr class=\"border-bottom\" style=\"height: 10px;\">\r\n                    <td width=\"4%\" class=\"ontop onleftright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Sr. No.\r\n                        </p>\r\n                    </td>\r\n                    \r\n                    <td width=\"39%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Description and Specification of Goods\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"5%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            HSN Code\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"5%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Qty\r\n                        </p>\r\n                    </td>\r\n                    <!--<td width=\"5%\" class=\"ontop onright v-align\">-->\r\n                    <!--    <p align=\"center\" class=\"text-size\">-->\r\n                    <!--        Concentration-->\r\n                    <!--    </p>-->\r\n                    <!--</td>-->\r\n                    <td width=\"10%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Pkgs &amp; Qty in {{ doc.items[0].uom }}\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"10%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Rate\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"14%\" class=\"ontop onright v-align\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            Total\r\n                        </p>\r\n                    </td>\r\n                </tr>\r\n                \r\n\r\n                {% for row in doc.items %}\r\n\r\n\r\n                <tr style=\"border-bottom:1px solid black;\">\r\n                    <td width=\"4%\" class=\"notopbottom onleftright\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            {{ row.idx }}\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"39%\" class=\"notopbottom onright\">\r\n                        <p class=\"text-size\">\r\n                           {% if row.item_name | trim == row.description | trim %}\r\n                                      {{ row.item_name }}\r\n                                    {% else %}\r\n                                      {{ row.item_name }} <br>  {{ row.description }}\r\n                                    {% endif %}\r\n                        </p>\r\n                                <!--{% if row.item_custom_name %}-->\r\n                                <!--    <p class=\"text-size no-margin\">-->\r\n                                <!--        {{row.item_custom_name or \"\"}}-->\r\n                                <!--    </p>-->\r\n                                <!--{% else %}-->\r\n                                <!--    <p style=\"font-size:12px !important\">-->\r\n                                <!--         {{ row.description or \"\"}}-->\r\n                                <!--    </p>-->\r\n                                <!--{% endif %}-->\r\n                    </td>\r\n                    <td width=\"5%\" class=\"notopbottom onright\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            {{ row.gst_hsn_code or '' }}\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"5%\" class=\"notopbottom onright\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            {{ row.qty or '' }}\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"12%\" class=\"notopbottom onright\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            <!--{% set pallets_sum.value = row.pallet_size + pallets_sum.value %}-->\r\n                            <!--{{ row.pallet_size or \"\" }} Pallets X {{ row.total_pallets or \"\" }} {{ row.uom }}-->\r\n                            {{row.no_of_packages or \"\"}}  {{ row.packaging_material or ''}} {% if row.packing_size %} of {% endif %}\r\n                                            {{ row.packing_size or ''}} {{row.uom or \"\"}}\r\n                                           \r\n                                            {% if row.palleted %}\r\n                                               \r\n                                                <br> Each on {{row.total_pallets or \"\"}} Pallets\r\n                                            {% endif %}\r\n                        </p>\r\n                        \r\n                        \r\n                    </td>\r\n                    <td width=\"10%\" class=\"notopbottom onleftright\">\r\n                        <p align=\"center\" class=\"text-size\">\r\n                            {{ row.get_formatted(\"rate\") }}\r\n                        </p>\r\n                    </td>\r\n                    <td width=\"14%\" class=\"notopbottom\">\r\n                        <p align=\"right\" class=\"text-size\">\r\n                            {{ row.get_formatted(\"amount\") }}\r\n                        </p>\r\n                    </td>\r\n                </tr>\r\n                {% endfor %}\r\n    \r\n                <!--<tr>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--    </td>-->\r\n                <!--    <td class=\"onright\">-->\r\n\r\n                <!--   